generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  STUDENT
  ADVISER
  INSTRUCTOR
}

model User {
  id        String  @id @unique
  email     String  @unique
  firstName String
  lastName  String
  picture   String?
  role      Role    @default(STUDENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
